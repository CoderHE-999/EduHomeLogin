@using EduHome.Models;
@model Teacher; 
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Create new Author</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title" placeholder="Enter title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Desc">Description</label>
                    <input class="form-control" asp-for="Desc" placeholder="Enter description">
                    <span class="text-danger" asp-validation-for="Desc"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Position">Position</label>
                    <input class="form-control" asp-for="Position" placeholder="Enter Position">
                    <span class="text-danger" asp-validation-for="Position"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Degree">Degree</label>
                    <input class="form-control" asp-for="Degree" placeholder="Enter degree">
                    <span class="text-danger" asp-validation-for="Degree"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Hobbie">Hobbie</label>
                    <input class="form-control" asp-for="Hobbie" placeholder="Enter hobbie">
                    <span class="text-danger" asp-validation-for="Hobbie"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Faculty">Faculty</label>
                    <input class="form-control" asp-for="Faculty" placeholder="Enter faculty">
                    <span class="text-danger" asp-validation-for="Faculty"></span>

                </div>

                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input class="form-control" asp-for="ImageFile" placeholder="Enter image">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>

                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

