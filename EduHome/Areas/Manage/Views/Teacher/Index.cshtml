
@{
    ViewData["Title"] = "Index";
}

@using EduHome.Models;
@model List<Teacher>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="title">
                <h1 style="display: inline-block;">Notice</h1>
                <a asp-action="create" style="float:right" class="btn btn-primary">Create new</a>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="table">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Position</th>
                            <th scope="col">Degree</th>
                            <th scope="col">Faculty</th>
                            <th scope="col">Image</th>




                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Title</td>
                            <td>@item.Desc</td>
                            <td>@item.Position</td>
                            <td>@item.Degree</td>
                            <td>@item.Faculty</td>
                            <td>
                                <img width="100" src="~/Uploads/Teachers/@item.Image" />
                            </td>




                            <td class="d-flex justify-content-end">
                                <a class="bg-success" asp-action="edit" asp-route-id="@item.Id">
                                    <span>Edit <i class="far fa-edit ps-1"></i></span>
                                </a>
                                <a class="bg-danger" asp-action="delete" asp-route-id="@item.Id">
                                    <span>Delete <i class="fas fa-trash ps-1"></i></span>
                                </a>
                            </td>

                        </tr>
                        }

                    </tbody>
                </table>




            </div>
        </div>
    </div>
</div>


