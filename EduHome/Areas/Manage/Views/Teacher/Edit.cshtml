@using EduHome.Models;
@model Teacher;
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Create new Author</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="edit" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title" placeholder="Enter Date">
                    <span asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Position">Position</label>
                    <input class="form-control" asp-for="Position" placeholder="Enter Date">
                    <span asp-validation-for="Position"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Degree">Degree</label>
                    <input class="form-control" asp-for="Degree" placeholder="Enter Date">
                    <span asp-validation-for="Degree"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Hobbie">Hobbie</label>
                    <input class="form-control" asp-for="Hobbie" placeholder="Enter Date">
                    <span asp-validation-for="Hobbie"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Faculty">Faculty</label>
                    <input class="form-control" asp-for="Faculty" placeholder="Enter Date">
                    <span asp-validation-for="Faculty"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Desc">Description</label>
                    <input class="form-control" asp-for="Desc" placeholder="Enter description">
                    <span asp-validation-for="Desc"></span>

                </div>

                <div class="form-group">
                    <label asp-for="ImageFile">Image file</label>
                    <input class="form-control" asp-for="ImageFile" placeholder="Enter description">
                    <span asp-validation-for="ImageFile"></span>
                </div>

                <div class="img-box" style="width:30%;position:relative">
                    <input type="hidden" name="Image" value="@Model.Image" />
                    <img style="max-width:100%" src="~/Uploads/Teachers/@Model.Image" alt="Alternate Text" />
                    <i class="fas fa-times img-box-remove" style=" position: absolute; top: -8px; right: -6px; color: red; cursor: pointer; "></i>
                </div>



                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
